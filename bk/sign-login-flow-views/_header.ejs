<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Learn About Me</title>
	<link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css"/>
	<link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap-theme.css">
</head>
<body>

<div class="navbar navbar-default navbar-static-top" role="navigation">
	<div class="container">
		<div class="navbar-header">
			<a class="navbar-brand" href="/sign-login-flow">Learn About Me</a>
		</div>
		<ul class="nav navbar-nav navbar-right">
			<% if (currentUser) { %>
				<li>
					<a href="/sign-login-flow/edit">
						Hello, <%= currentUser.getName() %>
					</a>
				</li>
				<li><a href="/sign-login-flow/logout">Log out</a></li>
			<% } else { %>
				<li><a href="/sign-login-flow/login">Log in</a></li>
				<li><a href="/sign-login-flow/signup">Sign up</a></li>
			<% } %>
		</ul>
	</div>
</div>

<div class="container">
	<% errors.forEach(function(error) { %>
	<div class="alert alert-danger" role="alert">
		<%= error %>
	</div>
	<% }) %>
	<% infos.forEach(function(info) { %>
	<div class="alert alert-info" role="alert">
		<%= info %>
	</div>
	<% }) %>